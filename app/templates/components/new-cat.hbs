{{#if addNewCat}}
  <h1>Add Category</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="category">Category</label>
          {{input value=name id="name"}}
        </div>
        <button {{action 'saveCat'}}>Save</button>
      </form>
    </div>
{{else}}
    <button class="btn btn-success"{{action 'catFormShow'}}>New Category</button>
{{/if}}
